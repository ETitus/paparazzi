<!DOCTYPE flight_plan SYSTEM "../flight_plan.dtd">

<flight_plan alt="1.5" ground_alt="0" lat0="51.990634" lon0="4.376789" max_dist_from_home="20" name="Rotorcraft Optitrack (Delft)" security_height="0.3">
  <header>
		#include "autopilot.h"
		#include "subsystems/datalink/datalink.h"
		#include "subsystems/electrical.h"
</header>
  <waypoints>
    <waypoint name="HOME" x="3.0" y="0.5"/>
    <waypoint name="CLIMB" x="3.0" y="0.5"/>
    <waypoint name="GOAL" x="3.0" y="0.5"/>
    <waypoint name="STDBY" x="3.0" y="0.5"/>
    <waypoint name="TD" x="3.0" y="0.5"/>
    <waypoint name="Left" x="1.9" y="-0.2"/>
    <waypoint name="Right" x="1.2" y="-1.4"/>
    <waypoint name="Front" x="1.9" y="1.7"/>
    <waypoint name="Back" x="3.9" y="-0.7"/>
    <waypoint lat="51.9906213" lon="4.3768628" name="FA1"/>
    <waypoint lat="51.9905874" lon="4.3767766" name="FA2"/>
    <waypoint lat="51.9906409" lon="4.3767226" name="FA3"/>
    <waypoint lat="51.9906737" lon="4.3768074" name="FA4"/>
  </waypoints>
  <sectors>
    <sector color="red" name="Flight_Area">
      <corner name="FA4"/>
      <corner name="FA3"/>
      <corner name="FA2"/>
      <corner name="FA1"/>
    </sector>
  </sectors>
  <exceptions>
    <exception cond="And(datalink_time > 2, !GpsFixValid()) && !(nav_block == IndexOfBlock('Wait GPS')) && !(nav_block == IndexOfBlock('slowDecentLinkLoss'))" deroute="slowDecentLinkLoss"/>
    <exception cond="electrical.bat_low && !(nav_block == IndexOfBlock('Wait GPS')) && !(nav_block == IndexOfBlock('Holding point')) && !(nav_block == IndexOfBlock('land')) && !(nav_block == IndexOfBlock('landed')) && !(nav_block == IndexOfBlock('flare')) && !(nav_block == IndexOfBlock('slowDecentLinkLoss'))" deroute="land"/>
  </exceptions>
  <blocks>
    <block name="Wait GPS">
      <call fun="NavKillThrottle()"/>
      <while cond="!GpsFixValid()"/>
    </block>
    <block name="Holding point">
      <call fun="NavKillThrottle()"/>
      <attitude pitch="0" roll="0" throttle="0" until="FALSE" vmode="throttle"/>
    </block>
    <block name="Start Engine">
      <call fun="NavResurrect()"/>
      <attitude pitch="0" roll="0" throttle="0" until="FALSE" vmode="throttle"/>
    </block>
    <block name="Takeoff" strip_button="Takeoff" strip_icon="takeoff.png">
      <exception cond="stateGetPositionEnu_f()->z > 1.0" deroute="Standby"/>
      <call fun="NavSetWaypointHere(WP_CLIMB)"/>
      <stay climb="nav_climb_vspeed" vmode="climb" wp="CLIMB"/>
    </block>
    <block name="Standby" strip_button="Standby" strip_icon="home.png">
      <stay wp="STDBY"/>
    </block>
    <block name="START" strip_button="Go" strip_icon="lookfore.png">
      <call fun="NavSetWaypointHere(WP_GOAL)"/>
    </block>
    <block name="StayRight">
      <stay wp="Right"/>
    </block>
    <block name="line_RL">
      <go from="Right" hmode="route" wp="Left"/>
      <stay until="stage_time>1" wp="Left"/>
      <go from="Left" hmode="route" wp="Right"/>
      <stay until="stage_time>1" wp="Right"/>
      <deroute block="line_RL"/>
    </block>
    <block name="StayBack">
      <stay wp="Back"/>
    </block>
    <block name="line_FB">
      <go from="Back" hmode="route" wp="Front"/>
      <stay until="stage_time>1" wp="Front"/>
      <go from="Front" hmode="route" wp="Back"/>
      <stay until="stage_time>1" wp="Back"/>
      <deroute block="line_FB"/>
    </block>
    <block name="StayGoal">
      <stay wp="GOAL"/>
    </block>
    <block name="land here" strip_button="Land Here" strip_icon="land-right.png">
      <call fun="NavSetWaypointHere(WP_TD)"/>
    </block>
    <block name="land">
      <go wp="TD"/>
    </block>
    <block name="flare">
      <exception cond="block_time>2" deroute="landed"/>
      <exception cond="NavDetectGround()" deroute="Holding point"/>
      <exception cond="!nav_is_in_flight()" deroute="landed"/>
      <call fun="NavStartDetectGround()"/>
      <stay climb="nav_descend_vspeed" vmode="climb" wp="TD"/>
    </block>
    <block name="landed">
      <call fun="NavKillThrottle()"/>
      <attitude pitch="0" roll="0" throttle="0" until="FALSE" vmode="throttle"/>
    </block>
    <block name="slowDecentLinkLoss">
      <exception cond="block_time>2" deroute="landed"/>
      <call fun="NavSetWaypointHere(WP_TD)"/>
      <stay climb="nav_descend_vspeed" vmode="climb" wp="TD"/>
    </block>
  </blocks>
</flight_plan>
