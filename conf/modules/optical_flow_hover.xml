<!DOCTYPE module SYSTEM "module.dtd">

<module name="optical_flow_hover" dir="ctrl">
	<doc>
		<description>
			Optical flow Hover.

			This module stabilizes the quadcopter in all three axis using only the
			camera and the IMU
		</description>
		<section name="OFH" prefix="OFH_">
		    <define name="LP_CONST" value="0.75" description="Low pass filter constant for divergence input."/>
    </section>
	</doc>
	<settings>
		<dl_settings>
			 <dl_settings name="OpticalFlowHover">
			 	<dl_settings name="General">
			 		<dl_setting var="of_hover_ctrl.lp_const" min="0.005" step="0.005" max="1" module="ctrl/optical_flow_hover" shortname="lp_factor" param="OFH_LP_CONST"/>
			 	</dl_settings>
			 	<dl_settings name="Vertical">
		        	<dl_setting var="of_hover_ctrl.covDiv_set_point" min="-0.05" step="0.00001" max="0" module="ctrl/optical_flow_hover" shortname="covDiv_set_point" param="OFH_COVDIV_SETPOINT"/>
		        	<dl_setting var="of_hover_ctrl.rampZ" min="0" step="0.005" max="1" module="ctrl/optical_flow_hover" shortname="rampZ" param="OFH_RAMPZ"/>
		        	<dl_setting var="of_hover_ctrl.reduction_factorZ" min="0.1" step="0.01" max="1" module="ctrl/optical_flow_hover" shortname="reduction_factorZ" param="OFH_REDUCTIONZ"/>
		        	<dl_setting var="of_hover_ctrl.igainZ" min="0" step="0.001" max="0.1" module="ctrl/optical_flow_hover" shortname="igainZ" param="OFH_IGAINZ"/>
		        	<dl_setting var="of_hover_ctrl.dgainZ" min="0" step="0.01" max="1" module="ctrl/optical_flow_hover" shortname="dgainZ" param="OFH_DGAINZ"/>
		        	<dl_setting var="of_hover_ctrl.COV_METHOD" min="0" step="1" max="1" values="Div-Thrust|Div-Shift div" module="ctrl/optical_flow_hover" shortname="COV_METHOD" param="OFH_COV_METHOD"/>
             	</dl_settings>		        
             	<dl_settings name="Horizontal">
             		<dl_setting var="of_hover_ctrl.covFlow_set_point" min="-10000" step="100" max="10000" module="ctrl/optical_flow_hover" shortname="covDiv_set_point" param="OFH_COVDIV_SETPOINT"/>
		        	<dl_setting var="of_hover_ctrl.rampXY" min="0" step="0.0001" max="0.05" module="ctrl/optical_flow_hover" shortname="rampXY" param="OFH_RAMPXY"/>
		        	<dl_setting var="of_hover_ctrl.reduction_factorXY" min="0.1" step="0.01" max="1" module="ctrl/optical_flow_hover" shortname="reduction_factorXY" param="OFH_REDUCTIONXY"/>
		        	<dl_setting var="of_hover_ctrl.pgainX" min="0" step="0.00001" max="0.01" module="ctrl/optical_flow_hover" shortname="pgainX"/>
		        	<dl_setting var="of_hover_ctrl.igainX" min="0" step="0.00001" max="0.001" module="ctrl/optical_flow_hover" shortname="IgainX" param="OFH_IGAINX"/>
		        	<dl_setting var="of_hover_ctrl.dgainX" min="0" step="0.00001" max="0.001" module="ctrl/optical_flow_hover" shortname="DgainX" param="OFH_DGAINX"/>
		        	<dl_setting var="of_hover_ctrl.igainY" min="0" step="0.00001" max="0.001" module="ctrl/optical_flow_hover" shortname="IgainY" param="OFH_IGAINY"/>
		        	<dl_setting var="of_hover_ctrl.dgainY" min="0" step="0.00001" max="0.001" module="ctrl/optical_flow_hover" shortname="DgainY" param="OFH_DGAINY"/>
		        	<dl_setting var="oscphi" min="0" step="1" max="1" values="No|OSC" module="ctrl/optical_flow_hover" shortname="oscphi" />
		        	<dl_setting var="osctheta" min="0" step="1" max="1" values="No|OSC" module="ctrl/optical_flow_hover" shortname="osctheta" />
             	</dl_settings>
             </dl_settings>
      </dl_settings>
	</settings>

	<header>
		<file name="optical_flow_hover.h" />
	</header>

	<init fun="optical_flow_hover_init()" />
	<periodic fun="optical_flow_hover_periodic()" start="optical_flow_hover_start()"
		stop="optical_flow_hover_stop()" autorun="TRUE" />

	<makefile target="ap">
		<file name="optical_flow_hover.c" />
	</makefile>

</module>
